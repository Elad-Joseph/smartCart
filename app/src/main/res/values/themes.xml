<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SmartCart" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="Theme.SmartCart.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="Theme.SmartCart" parent="Base.Theme.SmartCart" />

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="outline" parent="">
        <item name="android:strokeColor">@color/black</item>
        <item name="android:width">2dp</item>
    </style>
</resources>